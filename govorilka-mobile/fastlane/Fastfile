# Fastfile for Govorilka iOS
# Run: fastlane deliver

default_platform(:ios)

platform :ios do
  # Load API key
  def api_key
    app_store_connect_api_key(
      key_id: "4M73FRWZ6J",
      issuer_id: "69a6de8c-13cb-47e3-e053-5b8c7c11a4d1",
      key_filepath: File.expand_path("~/.appstoreconnect/AuthKey_4M73FRWZ6J.p8")
    )
  end

  desc "Upload metadata to App Store Connect"
  lane :metadata do
    deliver(
      api_key: api_key,
      skip_binary_upload: true,
      skip_screenshots: true,
      force: true, # Skip confirmation
      precheck_include_in_app_purchases: false,
      submission_information: {
        add_id_info_uses_idfa: false
      }
    )
  end

  desc "Upload screenshots to App Store Connect"
  lane :screenshots do
    deliver(
      api_key: api_key,
      skip_binary_upload: true,
      skip_metadata: true,
      force: true
    )
  end

  desc "Upload everything (metadata + screenshots)"
  lane :upload do
    deliver(
      api_key: api_key,
      skip_binary_upload: true,
      force: true,
      precheck_include_in_app_purchases: false
    )
  end
end
